<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_margin="10dp"
        android:padding="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_promo_item">

            <TextView
                android:id="@+id/promo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Forex"
                android:textStyle="bold"
                style="@style/TextViewStyle"
                android:textSize="22sp"
                app:layout_constraintLeft_toRightOf="@id/promo_image"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:padding="5dp"
                android:id="@+id/promo_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/promo_text"
                style="@style/TextViewStyle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Forex Copy - Professionals trade, you ewfwdfsdfearn"
                android:textSize="13sp"
                android:maxLines="2"
                app:layout_constraintLeft_toRightOf="@id/promo_image"
                app:layout_constraintTop_toBottomOf="@id/promo_name"
                />

            <TextView
                android:id="@+id/promo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start earning today"
                android:background="@drawable/button_background"
                app:layout_constraintTop_toBottomOf="@id/promo_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="10dp"
                android:clickable="true"
                android:textSize="13sp"
                android:focusable="true"/>

            <View
                android:id="@+id/a"
                app:layout_constraintTop_toBottomOf="@id/promo_button"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
